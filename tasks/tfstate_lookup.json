{
  "description": "Look up resource attributes from tfstate",
  "files": [
    "ruby_task_helper/files/task_helper.rb",
    "terraform/lib/statefile_helper.rb"
  ],
  "input_method": "stdin",
  "parameters": {
    "dir": {
      "type": "String[1]"
    },
    "resource_type": {
      "type": "String[1]"
    },
    "state": {
      "type": "Optional[String[1]]"
    },
    "backend": {
      "type": "Optional[String[1]]"
    },
    "attribute_path": {
      "type": "Optional[String]",
      "description": "Path to specific atrribute in attribute array, example: 0.ip.external"
    }
  }
}
